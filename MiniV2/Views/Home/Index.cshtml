@Html.Partial("LogoView")

<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img class="img-responsive" src="~/images/banner1.svg" alt="Receitas" />
            <div class="carousel-caption" role="option">
                <p>
                    Conheça a nossa seleção de receitas
                    <a class="btn btn-default" asp-controller="Receitas" asp-action="Mais_receitas">
                        Receitas
                    </a>
                </p>
            </div>
        </div>
        <div class="item">
            <img class="img-responsive" src="~/images/banner2.svg" alt="Atendimento" />
            <div class="carousel-caption" role="option">
                <p>
                    Conheça detalhes de nosso atendimento
                    <a class="btn btn-default" asp-controller="Home" asp-action="Atendimento">
                        Atendimento
                    </a>
                </p>
            </div>
        </div>
        <div class="item">
            <img class="img-responsive" src="~/images/banner3.svg" alt="Fitoterapia" />
            <div class="carousel-caption" role="option">
                <p>
                    Fitoterapia em maior riqueza de detalhes
                    <a class="btn btn-default" asp-controller="Home" asp-action="Fitoterapia">
                        Fitoterapia
                    </a>
                </p>
            </div>
        </div>
    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>


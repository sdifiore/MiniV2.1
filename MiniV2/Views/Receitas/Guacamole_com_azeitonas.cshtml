
@{
    ViewBag.Title = "Guacamole com azeitonas";
}

<h2>Guacamole com azeitonas</h2>

@Html.Partial("LogoView")

<div class="container">
    <div class="row">
        <div class="col-md-4">
            <img class="img-responsive" src="~/Images/Guacamole_com_azeitonas_400.jpg" title="Guacamole com azeitonas" alt="" />
            <p class="referencia">Foto <a href="http://www.somethingelsetoeat.blogspot.it">somethingelsetoeat.blogspot.it</a></p>
            <p></p>
        </div>
        <div class="col">
            <p class="identDIV">
                <img src="~/Images/Icone_100_por_cento_vegana_45.jpg" title="Vegana" alt="Receita 100% vegana" />&nbsp;
                <img src="~/Images/Icone_low_carb_45.jpg" title="Low Carb" alt="Receita low carb" />&nbsp;
                <img src="~/Images/Icone_sem_gluten_45.jpg" title="Sem glúten" alt="Receita sem glúten" />&nbsp;
                <img src="~/Images/Icone_sem_laticinios_45.jpg" title="Sem Laticínios" alt="Receita sem laticínio" />&nbsp;
                <img src="~/Images/Icone_paleo_diet_45.jpg" title="Paleo Diet" alt="Receita paleo diet" />&nbsp;
                <img src="~/Images/Icone_bom_para_o_coracao_45.jpg" title="Bom para o coração" alt="Receita boa para o coração" />&nbsp;
            </p>
            <br />
            <p class="identDIV">
                <strong>Ingredientes:</strong>
            </p>
            <br />
            <p class="identDIV">
                &nbsp;&nbsp;&nbsp;&nbsp;2-3 avocados pequenos e maduros (devem estar pretos e macios)
            </p>
            <p class="identDIV">
                &nbsp;&nbsp;&nbsp;&nbsp;2 dentes de alho cru picado
            </p>
            <p class="identDIV">
                &nbsp;&nbsp;&nbsp;&nbsp;1 lim&atilde;o tahiti, s&oacute; o suco
            </p>
            <p class="identDIV">
                &nbsp;&nbsp;&nbsp;&nbsp;1 punhado de azeitonas tipo Azapa, picadas
            </p>
            <p class="identDIV">
                &nbsp;&nbsp;&nbsp;&nbsp;Sal a gosto, se precisar
            </p>
            <p class="identDIV">
                &nbsp;&nbsp;&nbsp;&nbsp;2-3 c. sopa de azeite extra virgem.
            </p>
            <p class="identDIV">
                Opcional: 1 pimenta dedo de mo&ccedil;a em tiras, sem sementes
            </p>
            <br />
            <p class="identDIV">
                <strong>Modo de Fazer:</strong> <br />
            </p>
            <br />
            <p class="identDIV">
                &nbsp;&nbsp;&nbsp;&nbsp;Picar a polpa dos avocados em um bowl, adicione todos os outros ingredientes e misture delicadamente.
            </p>
            <p class="identDIV">
                &nbsp;&nbsp;&nbsp;&nbsp;Ajuste o sal e est&aacute; pronto pra servir.
            </p>
            <br />
            <p class="identDIV">
                &nbsp;&nbsp;&nbsp;&nbsp;Rende 2 por&ccedil;&otilde;es.
            </p>
        </div>
    </div>
</div>